{
  "name": "@flowtune/desktop",
  "version": "1.0.0",
  "description": "My Electron application description",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "daqi",
    "email": "daqidaqi@qq.com"
  },
  "main": "build/main.js",
  "scripts": {
    "build:all": "npm run build:main && npm run build:preload",
    "build:main": "vite build --config vite.main.config.ts",
    "build:preload": "vite build --config vite.preload.config.ts",
    "dev": "electron .",
    "make": "electron-builder --config electron-builder.config.ts",
    "aio": "npm run update-submodules && npm run prepare && npm run build:all && npm run make",
    "lint": "eslint --ext .ts,.tsx .",
    "publish": "electron-builder publish",
    "start": "electron-builder start",
    "prepare": "tsx scripts/prepare.ts",
    "postinstall": "electron-builder install-app-deps",
    "update-submodules": "tsx scripts/update-submodules.ts",
    "icon": "electron-icon-builder --input=$(pwd)/assets/icon.png --output=./assets"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "electron": "^37.2.5",
    "electron-builder": "26.0.19",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "fs-extra": "^11.3.0",
    "typescript": "~4.5.5",
    "tsx": "~4.19.4",
    "vite": "^7.0.6"
  },
  "productName": "flowtune"
}
