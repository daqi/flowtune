{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@flowtune/shared/*": ["packages/shared/src/*"],
      "@flowtune/backend/*": ["packages/backend/src/*"],
      "@flowtune/frontend/*": ["packages/frontend/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/backend"
    },
    {
      "path": "./packages/frontend"
    },
    {
      "path": "./packages/desktop"
    }
  ]
}
