{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "scripts",
    "vite.main.config.ts",
    "vite.preload.config.ts",
    "electron-builder.config.ts"
  ]
}
